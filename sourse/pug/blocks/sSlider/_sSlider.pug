mixin sSlider(data)
	// start sSlider
	+b.SECTION.sSlider.section#sSlider&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 #[strong Недвижимость ] для отдыха и жизни
				p а также для выгодной инвестиции
			+e.slider--js.swiper
				.swiper-wrapper
					mixin mainSlide(title="Студия 48 м² в элитном комплексе в 5 минутах от пляжа")
						+e.main-slide.swiper-slide
							+e.row.row
								.col-lg-7
									+e.gallery-slider--js.swiper
										.swiper-wrapper
											-for(let i = 0; i< 9; i++)
												+e.slide.swiper-slide
													+e.full-size(data-fancybox=i data-src="img/sSlider-img-1.jpg")
														+icon('zoom')
													+e.img-wrap
														+img('img/sSlider-img-1.jpg')
										.swiper-pagination
										+arrow()
								.col-lg-5
									+e.content
										.h4!= title
										+e.label-row.row
											.col-auto
												+e.label--green Новая
											.col-auto
												+e.label ID 2136
											.col-auto
												+e.label 2025
										+e.price-row.row
											.col-auto
												+e.price 54,500 £
											.col-auto
												+e.size 1,136 £ /m<sup>2</sup>
											.col-auto
												//- +input('£', 'select')
												+e.SELECT.input.form-select(name="select")
													option(value="£" data-price='54,500' data-smallPrice='1,136') £
													option(value="€" data-price='62,905' data-smallPrice='1,311') €
													option(value="₽" data-price='33,795,296' data-smallPrice='79,479') ₽
													option(value="$" data-price='63,018' data-smallPrice='4,825') $
										+e.adress 
											+icon('map')
											| Фамагуста / Лонг Бич
										+e.advantage.d-lg-none
											+e.advantage-item
												p Площадь
												+icon('square')
												span 48м2
											+e.advantage-item
												p Спален
												+icon('bedroom')
												span 1
											+e.advantage-item
												p Ванные
												+icon('bathroom')
												span 1
											+e.advantage-item
												p До моря
												+icon('sea')
												span 1,3 км
											+e.advantage-item
												p Бассейн
												+icon('pool')
												span Есть
										ul
											li 1,3 км от песчаного пляжа
											li Беспроцентная рассрочка до 84 месяцев
											li Первоначальный взнос 35%. Остаток в беспроцентную рассрочку до 84 месяцев!
								.col-lg-7.d-none.d-lg-block
									+e.advantage
										+e.advantage-item
											p Площадь
											+icon('square')
											span 48м2 
										+e.advantage-item
											p Спален
											+icon('bedroom')
											span 1
										+e.advantage-item
											p Ванные
											+icon('bathroom')
											span 1
										+e.advantage-item
											p До моря
											+icon('sea')
											span 1,3 км
										+e.advantage-item
											p Бассейн
											+icon('pool')
											span Есть
								+e.col-btn.col-lg-5
									+e.btn.btn.btn-primary(href="#" data-src='modal-call' data-fancybox="modal" data-order= `Осмотр - ${title}`).btn-js заказать онлайн-просмотр
					-for(let j = 0; j<5; j++)
						+mainSlide
				+e.control
					+arrow
			+e.footer-content.text-center
				h4 Задать вопрос менеджеру
				p Менеджер ответит на&nbsp;все вопросы по&nbsp;этому объекту или подберет для вас другие варианты. А&nbsp;также расскажет о&nbsp;спецпредложениях и&nbsp;объектах, которых нет в&nbsp;открытой продаже
				+e.mobile-link(href="tel:+79046005803") +7 (904) 600-58-03
				+soc()
	// end sSlider