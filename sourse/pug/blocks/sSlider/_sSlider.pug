							+e.row.row
								+e.col-main.col-lg-7
									+e.full-size(data-fancybox=`gallery-${slide}` data-src=`img/@2x/sSlider-img-${slide}-1.jpg` data-thumb=`img/@2x/sSlider-img-${slide}-1.jpg`)
										+icon('zoom')
									
									-for(let i = 2; i< num; i++)
										+e.full-size(data-fancybox=`gallery-${slide}` data-src=`img/@2x/sSlider-img-${slide}-${i}.jpg` data-thumb=`img/@2x/sSlider-img-${slide}-${i}.jpg`).d-none
											+icon('zoom')
									+e.gallery-slider--js.swiper
										.swiper-wrapper
											-for(let i = 1; i< num; i++)
												if i < 6
													+e.slide.swiper-slide
														+e.img-wrap
															+pic(`sSlider-img-${slide}-${i}.jpg`)
															//- +img(`img/sSlider-img-${slide}-${i}.jpg`)
