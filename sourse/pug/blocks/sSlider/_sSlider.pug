mixin sSlider(data)
	// start sSlider
	+b.SECTION.sSlider.section#sSlider&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 #[strong Недвижимость ] для отдыха и жизни
				p а также для выгодной инвестиции
			+e.slider--js.swiper
				+e.control
					+arrow()
				.swiper-wrapper
